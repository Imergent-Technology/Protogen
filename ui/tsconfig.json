{
  "extends": "../config/tsconfig.base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "composite": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@progress/shared": ["../shared/src"],
      "@progress/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src", "../shared/src"]
}
