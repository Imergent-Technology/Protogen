{
  "extends": "../config/tsconfig.base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@progress/shared": ["../shared/src"],
      "@progress/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
